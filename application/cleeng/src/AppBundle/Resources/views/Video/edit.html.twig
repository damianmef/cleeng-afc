{% extends 'base.html.twig' %}

{% block content %}
    {% if variables.status and variables.msg is not empty %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ variables.msg }}
        </div>
    {% endif %}

    {% if not variables.status and variables.msg is not empty %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ variables.msg }}
        </div>
    {% endif %}


    <h2>Edit video</h2>
    <div class="table-responsive-sm">
        <form class="form-horizontal form-add-reservation" method="post" data-parsley-validate="" novalidate="">
            <input name="video-id" value="{{ variables.data.item.id }}" type="hidden"/>
            <div class="form-group">
                <label for="video-title" class="control-label">Title</label>
                <div class="">
                    <input id="video-title" class="form-control" name="video-title" value="{{ variables.data.item.title }}"/>
                </div>
            </div>
            <div class="form-group">
                <label for="video-url" class="control-label">Url</label>
                <div class="">
                    <input id="video-url" class="form-control" name="video-url" value="{{ variables.data.item.url }}"/>
                </div>
            </div>
            <div class="form-group">
                <label for="video-subscription" class="control-label">Subscription</label>
                <div class="">
                    <select class="selectpicker select-picker" id="video-subscription" name="video-subscription" required="" data-parsley-required="true">
                        {% for item in variables.data.subscriptions %}
                            <option value="{{ item.id }}" {% if variables.data.item.subscription == item.id %} selected {% endif %}>{{ item.title }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <a class="btn btn-secondary" href="{{ path('video_list') }}">Back</a>
                    </div>
                    <div class="col-6">
                        <button class="float-right btn btn-success my-2 my-sm-0">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

