{% extends 'base.html.twig' %}

{% block content %}
    {% if variables.status and variables.msg is not empty %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ variables.msg }}
        </div>
    {% endif %}

    {% if not variables.status and variables.msg is not empty %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ variables.msg }}
        </div>
    {% endif %}
    <h2>Edit user</h2>
    <div class="table-responsive-sm">
        <form class="form-horizontal form-add-reservation" method="post" data-parsley-validate="" novalidate="">
            <input type="hidden" name="id" value="{{ variables.data.item.id }}"/>
            <div class="form-group">
                <label for="user_email" class="control-label">Email</label>
                <div class="">
                    <input class="form-control" name="user-email" value="{{ variables.data.item.email }}"/>
                </div>
            </div>
            <div class="form-group">
                <label for="user_email" class="control-label">Username</label>
                <div class="">
                    <input class="form-control" name="user-username" value="{{ variables.data.item.username }}"/>
                </div>
            </div>
            <div class="form-group">
                <label for="video-subscription" class="control-label">Subscription</label>
                <div class="">
                    <select class="selectpicker select-picker" id="user-subscription" name="user-subscription" required="" data-parsley-required="true">
                        <option value="">-</option>
                        {% for item in variables.data.subscriptions %}
                            <option value="{{ item.id }}" {% if variables.data.item.subscriptionType == item.id %} selected {% endif %}>{{ item.title }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-6">
                        <a class="btn btn-secondary" href="{{ path('user_list') }}">Back</a>
                    </div>
                    <div class="col-6">
                        <button class="float-right btn btn-success my-2 my-sm-0">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

